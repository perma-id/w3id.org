Header set Access-Control-Allow-Origin *
Options +FollowSymLinks
RewriteEngine on

RewriteCond %{HTTP_ACCEPT} html

# REDIRECT TO VISUALISATIONS
RewriteRule ^sparql$ https://projects.dharc.unibo.it/lodedo/sparql [R=302,L]
RewriteRule ^([^/]+)/artworks/(.*) https://projects.dharc.unibo.it/lodedo/artworks/$2 [R=302,L]
RewriteRule ^([^/]+)/graphs/(.*) https://projects.dharc.unibo.it/lodedo/scholarly-interpretations/$2 [R=302,L]
RewriteRule ^([^/]+)/conjectures/(.*) https://projects.dharc.unibo.it/lodedo/auto-interpretations/$2 [R=302,L]
RewriteRule ^data$ https://projects.dharc.unibo.it/lodedo/data/lodedo.trig [R=302,L]

# DEFAULT RULE
RewriteRule ^(.*)$ https://projects.dharc.unibo.it/lodedo$1 [L,R=301]

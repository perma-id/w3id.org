#Rewrite rules for iCity-X (Ontology IRI and Version IRI)
#default response: owl
RewriteRule ^([A-Za-z-\d]*)(\.owl)?$ https://raw.githubusercontent.com/EnterpriseIntegrationLab/icity/master/$1.owl [R=302,L]

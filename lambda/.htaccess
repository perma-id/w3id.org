Options +FollowSymLinks
RewriteEngine on

# LAMBDA-BER-SCHEMA: Data schema for BER structural biology
# https://github.com/lambda-ber/lambda-ber-schema

# vocab/ end point - redirect to GitHub Pages documentation
RewriteRule ^vocab$ https://lambda-ber.github.io/lambda-ber-schema/ [R=302,L]
RewriteRule ^vocab\/(.*)$ https://lambda-ber.github.io/lambda-ber-schema/$1 [R=302,L]

# schema/ submodules - redirect to raw schema files
RewriteRule ^schema\/(.*)$ https://raw.githubusercontent.com/lambda-ber/lambda-ber-schema/main/src/lambda_ber_schema/schema/$1 [R=302,L]

# Schema artifacts use raw GitHub URLs

# if suffix is .yaml, redirect to LinkML YAML schema
RewriteRule ^lambda-ber-schema\.yaml$ https://raw.githubusercontent.com/lambda-ber/lambda-ber-schema/main/src/lambda_ber_schema/schema/lambda-ber-schema.yaml [R=302,L]

# if suffix is .schema.json, redirect to JSON Schema
RewriteRule ^lambda-ber-schema\.schema\.json$ https://raw.githubusercontent.com/lambda-ber/lambda-ber-schema/main/assets/jsonschema/lambda-ber-schema.schema.json [R=302,L]

# if suffix is .owl.ttl, redirect to OWL
RewriteRule ^lambda-ber-schema\.owl\.ttl$ https://raw.githubusercontent.com/lambda-ber/lambda-ber-schema/main/assets/owl/lambda-ber-schema.owl.ttl [R=302,L]

# Schema elements use GitHub Pages - redirect to docs/elements/
RewriteRule ^(.*)$ https://lambda-ber.github.io/lambda-ber-schema/elements/$1 [R=302,L]

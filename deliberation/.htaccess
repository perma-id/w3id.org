# Deliberation Ontology
# Author: Simone Vagnoni

RewriteEngine on

# Ontology
RewriteRule ^$ https://stocastico96.github.io/Deliberation-Knowledge-Graph/ontologies/deliberation.owl [R=302,L]

# Content negotiation for ontology
RewriteCond %{HTTP_ACCEPT} !application/rdf\+xml.*(text/html|application/xhtml\+xml)
RewriteCond %{HTTP_ACCEPT} text/html [OR]
RewriteCond %{HTTP_ACCEPT} application/xhtml\+xml [OR]
RewriteCond %{HTTP_USER_AGENT} ^Mozilla/.*
RewriteRule ^ontology$ https://stocastico96.github.io/Deliberation-Knowledge-Graph/ontologies/index.html [R=303,L]
RewriteCond %{HTTP_ACCEPT} application/rdf\+xml
RewriteRule ^ontology$ https://stocastico96.github.io/Deliberation-Knowledge-Graph/ontologies/deliberation.owl [R=303,L]

# Resources
RewriteRule ^(.*)$ https://stocastico96.github.io/Deliberation-Knowledge-Graph/ontologies/$1 [R=302,L]
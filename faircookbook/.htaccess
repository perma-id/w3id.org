RewriteEngine On

# define individual identifiers for recipes, of the form https://w3id.org/faircookbook/FCBxxx 
RewriteRule ^FCB000$ https://fairplus.github.io/the-fair-cookbook/content/home.html [R=303,L,QSA]
RewriteRule ^FCB001$ https://fairplus.github.io/the-fair-cookbook/content/recipes/findability/identifiers.html      [R=303,L,QSA]
RewriteRule ^FCB002$ https://fairplus.github.io/the-fair-cookbook/content/recipes/accessibility/anonymization.html  [R=303,L,QSA]
RewriteRule ^FCB003$ https://fairplus.github.io/the-fair-cookbook/content/recipes/accessibility/aspera.html [R=303,L,QSA]
RewriteRule ^FCB004$ https://fairplus.github.io/the-fair-cookbook/content/recipes/accessibility/sftp.html [R=303,L,QSA]
RewriteRule ^FCB005$ https://fairplus.github.io/the-fair-cookbook/content/recipes/applied-examples/etox.html [R=303,L,QSA]
RewriteRule ^FCB006$ https://fairplus.github.io/the-fair-cookbook/content/recipes/applied-examples/nd4bb.html [R=303,L,QSA]


# catch https://w3id.org/faircookbook
RewriteRule ^$   https://fairplus.github.io/the-fair-cookbook/content/home.html [R=303,L]

# catch https://w3id.org/faircookbook/ and remove the slash; the slashed version does not have meaning 
RewriteRule ^\/$   https://w3id.org/faircookbook [R=301,L]

# catch the rest and redirect to custom 404 page:
RewriteRule ^\/(.+)$   https://fairplus.github.io/the-fair-cookbook/custom404.html [R=404,L]

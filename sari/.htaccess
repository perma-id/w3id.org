Options +FollowSymLinks
RewriteEngine on

# Turn off MultiViews
Options -MultiViews

AddType text/turtle .ttl

# In case of accept header <text/turtle>
RewriteCond %{HTTP_ACCEPT} ^.*text/turtle.* 
RewriteRule ^$ https://schema.swissartresearch.net/ontology/sari.ttl [R=303,NE,L]

# If suffix ttl, redirect to turtle version
RewriteRule ^sari.ttl$ https://schema.swissartresearch.net/ontology/sari.ttl [R=302,NE,L]

# If suffix html, redirect to html version
RewriteRule ^sari.html$ https://schema.swissartresearch.net/ontology/sari [R=302,NE,L]

# Default response: html
RewriteRule ^$ https://schema.swissartresearch.net/ontology/sari [R=303,NE,L]
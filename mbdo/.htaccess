# Enable rewrite engine
RewriteEngine On

# /mbdo or /mbdo/ → GitHub Pages root
RewriteRule ^mbdo/?$ https://samar-aqlan.github.io/MBDO-ManagingBridgeDataOntology/ [R=301,L]

# /mbdo/anything → corresponding resource on GitHub Pages
RewriteRule ^mbdo/(.*)$ https://samar-aqlan.github.io/MBDO-ManagingBridgeDataOntology/$1 [R=301,L]

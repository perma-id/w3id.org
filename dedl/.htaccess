RewriteEngine On

# =========================
# 1. context.jsonld（JSON-LD）
# =========================
RewriteRule ^context\.jsonld$ https://dedl-project.github.io/dedl/context.jsonld [R=303,L]

# =========================
# 2. html or ttl 
# =========================

# HTML
RewriteCond %{HTTP_ACCEPT} text/html
RewriteRule ^$ https://dedl-project.github.io/dedl/index.html [R=303,L]

# Turtle
RewriteCond %{HTTP_ACCEPT} text/turtle
RewriteRule ^$ https://dedl-project.github.io/dedl/ontology.ttl [R=303,L]

# by default also HTML
RewriteRule ^$ https://dedl-project.github.io/dedl/index.html [R=303,L]
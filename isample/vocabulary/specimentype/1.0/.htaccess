Options +FollowSymLinks
RewriteEngine on 

# set environmental variable for the current version
SetEnvIf Request_URI "^.*" currentversion=version-1-0-1
# increment third place version number for non-breaking changes

#https://vocabs.ardc.edu.au/repository/api/lda/isamples/isamples-material-sample-type-vocabulary/version-1-0-1/resource?uri=https://w3id.org/isample/vocabulary/specimentype/1.0/{term}

RewriteCond %{HTTP:Accept} text/turtle [NC]
RewriteRule       ^(.+)$               https://vocabs.ardc.edu.au/repository/api/lda/isamples/isamples-material-sample-type-vocabulary/%{ENV:currentversion}/resource.ttl?uri=https://w3id.org/isample/vocabulary/specimentype/1.0/$1 [R=303,L]

RewriteCond %{HTTP:Accept} application/json [NC]
RewriteRule       ^(.+)$               https://vocabs.ardc.edu.au/repository/api/lda/isamples/isamples-material-sample-type-vocabulary/%{ENV:currentversion}/resource.json?uri=https://w3id.org/isample/vocabulary/specimentype/1.0/$1 [R=303,L]

RewriteCond %{HTTP:Accept} application/rdf+xml [NC]
RewriteRule       ^(.+)$               https://vocabs.ardc.edu.au/repository/api/lda/isamples/isamples-material-sample-type-vocabulary/%{ENV:currentversion}/resource.rdf?uri=https://w3id.org/isample/vocabulary/specimentype/1.0/$1 [R=303,L]

RewriteCond %{HTTP:Accept} text/html [NC]
RewriteRule       ^(.+)$               https://vocabs.ardc.edu.au/repository/api/lda/isamples/isamples-material-sample-type-vocabulary/%{ENV:currentversion}/resource.html?uri=https://w3id.org/isample/vocabulary/specimentype/1.0/$1 [R=303,L]

# default format is html
RewriteRule       ^(.+)$               https://vocabs.ardc.edu.au/repository/api/lda/isamples/isamples-material-sample-type-vocabulary/%{ENV:currentversion}/resource?uri=https://w3id.org/isample/vocabulary/specimentype/1.0/$1 [R=303,L]




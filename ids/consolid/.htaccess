RewriteEngine on

# Turn off MultiViews
Options -MultiViews

# Directive to ensure *.rdf files served as appropriate content type,
# if not present in main apache config
AddType application/rdf+xml .rdf
AddType application/rdf+xml .owl
AddType text/turtle .ttl
AddType text/n3 .n3
AddType application/n-triples .nt
AddType application/ld+json .json


### Rewrite rules for latest version
# Rewrite rule to serve HTML content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} !application/rdf\+xml.*(text/html|application/xhtml\+xml)
RewriteCond %{HTTP_ACCEPT} text/html [OR]
RewriteCond %{HTTP_ACCEPT} application/xhtml\+xml [OR]
RewriteCond %{HTTP_USER_AGENT} ^Mozilla/.*
RewriteRule ^$ https://consolidproject.github.io/vocabulary/ [R=303,L]

# Rewrite rule to serve TTL content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} ^.*text/turtle.* [OR]
RewriteCond %{HTTP_ACCEPT} text/\* [OR]
RewriteCond %{HTTP_ACCEPT} \*/turtle 
RewriteRule ^$ https://consolidproject.github.io/vocabulary/ontology.ttl [R=303,L]

# Rewrite rule to serve JSON-LD content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} application/ld\+json
RewriteRule ^$ https://consolidproject.github.io/vocabulary/ontology.jsonld [R=303,L]

# Rewrite rule to serve RDF/XML content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} \*/\* [OR]
RewriteCond %{HTTP_ACCEPT} application/rdf\+xml
RewriteRule ^$ https://consolidproject.github.io/vocabulary/ontology.rdf [R=303,L]

# Rewrite rule to serve N-Triples content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} application/n-triples
RewriteRule ^$ https://consolidproject.github.io/vocabulary/ontology.nt [R=303,L]

# Rewrite rule to serve N3 content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} ^.*text/n3.* [OR]
RewriteCond %{HTTP_ACCEPT} text/\* [OR]
RewriteCond %{HTTP_ACCEPT} \*/n3 
RewriteRule ^$ https://consolidproject.github.io/vocabulary/ontology.n3 [R=303,L]

# If suffix ttl, redirect to turtle version
RewriteRule ^ontology.ttl$ https://consolidproject.github.io/vocabulary/ontology.ttl [R=303,L]

# If suffix html, redirect to html version
RewriteRule ^ontology.html$ https://consolidproject.github.io/vocabulary/ [R=303,L]

# If suffix rdf, redirect to rdf version
RewriteRule ^ontology.rdf$ https://consolidproject.github.io/vocabulary/ontology.rdf [R=303,L]

# If suffix jsonld, redirect to jsonld version
RewriteRule ^ontology.jsonld$ https://consolidproject.github.io/vocabulary/ontology.jsonld [R=303,L]

# If suffix nt, redirect to nt version
RewriteRule ^ontology.nt$ https://consolidproject.github.io/vocabulary/ontology.nt [R=303,L]

# If suffix n3, redirect to N3 version
RewriteRule ^ontology.n3$ https://consolidproject.github.io/vocabulary/ontology.n3 [R=303,L]


### Rewrite rules for any other version
# Rewrite rule to serve TTL content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} text/turtle [OR]
RewriteCond %{HTTP_ACCEPT} text/\* [OR]
RewriteCond %{HTTP_ACCEPT} \*/turtle
RewriteRule ^ontology-?([0-9]+\.[0-9]+\.[0-9]+)$ https://consolidproject.github.io/vocabulary/ontology-$1.ttl [R=302,NE,L]

# Rewrite rule to serve JSON-LD content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} application/ld\+json
RewriteRule ^ontology-?([0-9]+\.[0-9]+\.[0-9]+)$ https://consolidproject.github.io/vocabulary/ontology-$1.jsonld [R=302,NE,L]

# Rewrite rule to serve RDF/XML content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} \*/\* [OR]
RewriteCond %{HTTP_ACCEPT} application/rdf\+xml
RewriteRule ^ontology-?([0-9]+\.[0-9]+\.[0-9]+)$ https://consolidproject.github.io/vocabulary/ontology-$1.rdf [R=302,NE,L]

# Rewrite rule to serve N-Triples content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} application/n-triples
RewriteRule ^ontology-?([0-9]+\.[0-9]+\.[0-9]+)$ https://consolidproject.github.io/vocabulary/ontology-$1.nt [R=302,NE,L]

# Rewrite rule to serve N3 content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} ^.*text/n3.* [OR]
RewriteCond %{HTTP_ACCEPT} text/\* [OR]
RewriteCond %{HTTP_ACCEPT} \*/n3 
RewriteRule ^ontology-?([0-9]+\.[0-9]+\.[0-9]+)$ https://consolidproject.github.io/vocabulary/ontology-$1.n3 [R=302,NE,L]

### Default response
RewriteRule ^$ https://consolidproject.github.io/vocabulary/ [R=303,L]
RewriteEngine on

# Redirect ontology version IRI to the given version
RewriteCond %{HTTP_ACCEPT} application/rdf\+xml [OR]
RewriteCond %{HTTP_ACCEPT} text/turtle [OR]
RewriteCond %{HTTP_ACCEPT} application/x-turtle
RewriteRule ^(\d\.\d\.\d)/?$ https://raw.githubusercontent.com/hsu-aut/Commission-Delegated-Regulation-EU-2019-947-ODP/v$1/eu-regulation-2019-947.owl [R=303,NC,L]

# Redirect ontology IRI (without version) to the current main branch version
RewriteCond %{HTTP_ACCEPT} application/rdf\+xml [OR]
RewriteCond %{HTTP_ACCEPT} text/turtle [OR]
RewriteCond %{HTTP_ACCEPT} application/x-turtle
RewriteRule ^/?$ https://raw.githubusercontent.com/hsu-aut/Commission-Delegated-Regulation-EU-2019-947-ODP/main/eu-regulation-2019-947.owl [R=303,NC,L]

# Redirect HTML requests to the main repository page
RewriteCond %{HTTP_ACCEPT} !application/rdf\+xml.*(text/html|application/xhtml\+xml)
RewriteCond %{HTTP_ACCEPT} text/html [OR]
RewriteCond %{HTTP_ACCEPT} application/xhtml\+xml [OR]
RewriteCond %{HTTP_USER_AGENT} ^Mozilla/.*
RewriteRule ^(\d\.\d\.\d)?/?$ https://github.com/hsu-aut/Commission-Delegated-Regulation-EU-2019-947-ODP [R=302,NC,L]


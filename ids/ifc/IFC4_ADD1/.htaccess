Options +FollowSymLinks
RewriteEngine On

# Turn off MultiViews
Options -MultiViews

# Directive to ensure *.rdf files served as appropriate content type,
# if not present in main apache config
AddType application/rdf+xml .rdf
AddType text/turtle .ttl

# Rewrite rule to serve HTML content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} text/html [OR]
RewriteCond %{HTTP_ACCEPT} application/xhtml\+xml [OR]
RewriteCond %{HTTP_USER_AGENT} ^Mozilla/.*
RewriteRule ^$ https://pi.pauwel.be/evoc/ifc_W3ID/20151211/IFC4_ADD1/index.html [R=302,NE,L]

# If suffix html, redirect to html version
RewriteRule ^express.html$ https://pi.pauwel.be/evoc/ifc_W3ID/20151211/IFC4_ADD1/index.html [R=302,NE,L]

# If suffix rdf, redirect to rdf version
RewriteRule ^IFC4_ADD1.rdf$ https://pi.pauwel.be/evoc/ifc_W3ID/20151211/IFC4_ADD1.rdf [R=302,NE,L]

# If suffix ttl, redirect to ttl version
RewriteRule ^IFC4_ADD1.ttl$ https://pi.pauwel.be/evoc/ifc_W3ID/20151211/IFC4_ADD1.ttl [R=302,NE,L]

# Rewrite rule to serve RDF/XML content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} application/rdf\+xml
RewriteRule ^$ https://pi.pauwel.be/evoc/ifc_W3ID/20151211/IFC4_ADD1.rdf [R=302,NE,L]

# Rewrite rule to serve RDF/XML content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} text/turtle
RewriteRule ^$ https://pi.pauwel.be/evoc/ifc_W3ID/20151211/IFC4_ADD1.ttl [R=302,NE,L]

# Choose the default response
# ---------------------------

# Rewrite rule to serve the HTML content from the vocabulary URI by default
RewriteRule ^$ https://pi.pauwel.be/evoc/ifc_W3ID/20151211/IFC4_ADD1/index.html [R=302]
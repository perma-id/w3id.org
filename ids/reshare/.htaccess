RewriteEngine on

# ontology subspace
# Used to identify things related to the ReShare ontology
RewriteRule ^ontology(.*)$ https://reshare-dtc.github.io/reshare-ontology$1 [R=303,L]

# spec subspace
# Used to identify and locate ReShare W3C member submission drafts
# (eventually, more rewrites will be added in future for other locations of current drafts)
RewriteRule ^spec/authors-draft(.*)$ https://reshare-dtc.github.io/reshare-w3c-member-submission/$1 [R=303,L]

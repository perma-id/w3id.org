RewriteEngine on

# Turn off MultiViews
Options -MultiViews

# Directive to ensure *.rdf files served as appropriate content type,
# if not present in main apache config
AddType application/rdf+xml .rdf
AddType application/rdf+xml .owl
AddType text/turtle .ttl
AddType application/n-triples .n3
AddType application/ld+json .json


### Rewrite rules for latest version
# Rewrite rule to serve HTML content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} !application/rdf\+xml.*(text/html|application/xhtml\+xml)
RewriteCond %{HTTP_ACCEPT} text/html [OR]
RewriteCond %{HTTP_ACCEPT} application/xhtml\+xml [OR]
RewriteCond %{HTTP_USER_AGENT} ^Mozilla/.*
RewriteRule ^$ https://www.projekt-scope.de/ontologies/omg/ [R=303,L]

# Rewrite rule to serve TTL content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} ^.*text/turtle.* [OR]
RewriteCond %{HTTP_ACCEPT} text/\* [OR]
RewriteCond %{HTTP_ACCEPT} \*/turtle 
RewriteRule ^$ https://www.projekt-scope.de/ontologies/omg/omg.ttl [R=303,L]

# Rewrite rule to serve JSON-LD content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} application/ld\+json
RewriteRule ^$ https://www.projekt-scope.de/ontologies/omg/omg.jsonld [R=303,L]

# Rewrite rule to serve RDF/XML content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} \*/\* [OR]
RewriteCond %{HTTP_ACCEPT} application/rdf\+xml
RewriteRule ^$ https://www.projekt-scope.de/ontologies/omg/omg.rdf [R=303,L]

# Rewrite rule to serve N-Triples content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} application/n-triples
RewriteRule ^$ https://www.projekt-scope.de/ontologies/omg/omg.nt [R=303,L]

# If suffix ttl, redirect to turtle version
RewriteRule ^omg.ttl$ https://www.projekt-scope.de/ontologies/omg/omg.ttl [R=303,L]

# If suffix html, redirect to html version
RewriteRule ^omg.html$ https://www.projekt-scope.de/ontologies/omg/ [R=303,L]

# If suffix rdf, redirect to rdf version
RewriteRule ^omg.rdf$ https://www.projekt-scope.de/ontologies/omg/omg.rdf [R=303,L]

# If suffix jsonld, redirect to jsonld version
RewriteRule ^omg.jsonld$ https://www.projekt-scope.de/ontologies/omg/omg.jsonld [R=303,L]

# If suffix nt, redirect to nt version
RewriteRule ^omg.nt$ https://www.projekt-scope.de/ontologies/omg/omg.nt [R=303,L]


### Rewrite rules for any other version
RewriteCond %{HTTP_ACCEPT} !application/rdf\+xml.*(text/html|application/xhtml\+xml)
RewriteCond %{HTTP_ACCEPT} text/html [OR]
RewriteCond %{HTTP_ACCEPT} application/xhtml\+xml [OR]
RewriteCond %{HTTP_USER_AGENT} ^Mozilla/.*
RewriteRule ^(.+)$ https://www.projekt-scope.de/ontologies/omg/archive/$1 [R=302,NE,L]

# Rewrite rule to serve JSON-LD content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} application/ld\+json
RewriteRule ^(.+)$ https://www.projekt-scope.de/ontologies/omg/archive/$1/omg.json [R=302,NE,L]

# Rewrite rule to serve RDF/XML content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} \*/\* [OR]
RewriteCond %{HTTP_ACCEPT} application/rdf\+xml
RewriteRule ^(.+)$ https://www.projekt-scope.de/ontologies/omg/archive/$1/omg.rdf [R=302,NE,L]

# Rewrite rule to serve N-Triples content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} application/n-triples
RewriteRule ^(.+)$ https://www.projekt-scope.de/ontologies/omg/archive/$1/omg.nt [R=302,NE,L]

# Rewrite rule to serve TTL content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} text/turtle [OR]
RewriteCond %{HTTP_ACCEPT} text/\* [OR]
RewriteCond %{HTTP_ACCEPT} \*/turtle 
RewriteRule ^(.+)$ https://www.projekt-scope.de/ontologies/omg/archive/$1/omg.ttl [R=302,NE,L]

### Default response
RewriteRule ^$ https://www.projekt-scope.de/ontologies/omg/ [R=303,L]

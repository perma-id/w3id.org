Header set Access-Control-Allow-Origin *
Header set Access-Control-Allow-Headers DNT,X-Mx-ReqToken,Keep-Alive,User-Agent,X-Requested-With,If-Modified$
Options +FollowSymLinks
# Turn off MultiViews
Options -MultiViews

# Directive to ensure *.rdf files served as appropriate content type,
# if not present in main apache config
AddType application/rdf+xml .rdf
AddType application/rdf+xml .owl
AddType text/turtle .ttl
AddType application/n-triples .n3
AddType application/ld+json .json
# Rewrite engine setup
RewriteEngine On

# Rewrite rule to serve HTML content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} !application/rdf\+xml.*(text/html|application/xhtml\+xml)
RewriteCond %{HTTP_ACCEPT} text/html [OR]
RewriteCond %{HTTP_ACCEPT} application/xhtml\+xml [OR]
RewriteCond %{HTTP_USER_AGENT} ^Mozilla/.*
RewriteRule ^core$ https://oeg-upm.github.io/devops-infra/ontology/core/index-en.html [R=302,L]
RewriteRule ^organisation$ https://oeg-upm.github.io/devops-infra/ontology/organisation/index-en.html [R=302,L]
RewriteRule ^product$ https://oeg-upm.github.io/devops-infra/ontology/product/index-en.html [R=302,L]
RewriteRule ^data-center$ https://oeg-upm.github.io/devops-infra/ontology/data-center/index-en.html [R=302,L]
RewriteRule ^server$ https://oeg-upm.github.io/devops-infra/ontology/server/index-en.html [R=302,L]
RewriteRule ^network$ https://oeg-upm.github.io/devops-infra/ontology/network/index-en.html [R=302,L]
RewriteRule ^software$ https://oeg-upm.github.io/devops-infra/ontology/software/index-en.html [R=302,L]
RewriteRule ^database$ https://oeg-upm.github.io/devops-infra/ontology/database/index-en.html [R=302,L]
RewriteRule ^hardware$ https://oeg-upm.github.io/devops-infra/ontology/hardware/index-en.html [R=302,L]
RewriteRule ^certificate$ https://oeg-upm.github.io/devops-infra/ontology/certificate/index-en.html [R=302,L]



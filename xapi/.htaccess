Options +FollowSymLinks
RewriteEngine on

#Rewrite base to xAPI vocab server
RewriteRule ^$ http://xapi.vocab.pub [L]

# Rewrite for SPARQL IRI
# ---------------------------
RewriteRule ^sparql$ http://xapi.vocab.pub:8890/sparql [R=302]

# Rewrite rule to serve vocabulary context from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} application/ld\+json
RewriteRule ^vocabulary/context$ http://xapi.vocab.pub/vocabulary/context.jsonld [R=303]

# Ontology Rewrite rule to serve HTML content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} !application/rdf\+xml.*(text/html|application/xhtml\+xml)
RewriteCond %{HTTP_ACCEPT} text/html [OR]
RewriteCond %{HTTP_ACCEPT} application/xhtml\+xml [OR]
RewriteCond %{HTTP_USER_AGENT} ^Mozilla/.*
RewriteRule ^ontology/?$ http://xapi.vocab.pub/ontology [R=303]

# Ontology Rewrite rule to serve RDF/XML content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} application/rdf\+xml
RewriteRule ^ontology/?$ http://xapi.vocab.pub/ontology.rdf [R=303]

# Ontology Rewrite rule to serve Turtle content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} text/turtle
RewriteRule ^ontology/?$ http://xapi.vocab.pub/ontology.ttl [R=303]


# PUT ALL VOCABULARY DATASET REWRITE RULES BELOW THIS POINT

# ADL Vocabulary
# ---------------------------

# ADL vocabulary rewrite rules to serve HTML content if requested
RewriteCond %{HTTP_ACCEPT} !application/rdf\+xml.*(text/html|application/xhtml\+xml)
RewriteCond %{HTTP_ACCEPT} text/html [OR]
RewriteCond %{HTTP_ACCEPT} application/xhtml\+xml [OR]
RewriteCond %{HTTP_USER_AGENT} ^Mozilla/.*
RewriteRule ^adl/?$ http://xapi.vocab.pub/datasets/adl/ [R=303,L]
RewriteRule ^adl/([a-z-]+)$ http://xapi.vocab.pub/datasets/adl/ [R=303,L]
# ADL vocabulary rewrite rule for specific verbs & activity types - catch all IRIs
RewriteRule ^adl/([a-z-]+)/([a-z-]+)$ http://xapi.vocab.pub/datasets/adl/#$2 [R=303,NE,L]

# ADL vocabualry rewrite rules to serve JSON-LD content if requested
RewriteCond %{HTTP_ACCEPT} application/ld\+json
RewriteRule ^adl/?$ http://xapi.vocab.pub/datasets/adl.jsonld [R=303,L]

# AcrossX Vocabulary
# ---------------------------

# acrossx vocabulary rewrite rule for HTML if requested
# ---------------------------
# Rewrite rule to serve HTML content from the vocabulary IRI if requested
RewriteCond %{HTTP_ACCEPT} !application/rdf\+xml.*(text/html|application/xhtml\+xml)
RewriteCond %{HTTP_ACCEPT} text/html [OR]
RewriteCond %{HTTP_ACCEPT} application/xhtml\+xml [OR]
RewriteCond %{HTTP_USER_AGENT} ^Mozilla/.*
RewriteRule ^acrossx/?$ http://xapi.vocab.pub/datasets/acrossx/ [R=303]
RewriteRule ^acrossx/(zh-cn)$ http://xapi.vocab.pub/datasets/acrossx/zh-cn [R=303,L]
RewriteRule ^acrossx/(zh-tw)$ http://xapi.vocab.pub/datasets/acrossx/zh-tw [R=303,L]
RewriteRule ^acrossx/([a-z-]+)$ http://xapi.vocab.pub/datasets/acrossx/ [R=303,L]
RewriteRule ^acrossx/([a-z-]+)/([a-z-]+)$ http://xapi.vocab.pub/datasets/acrossx/#$2 [R=303,NE]

# acrossx vocabulary rewrite rule to serve JSON-LD if requested
RewriteCond %{HTTP_ACCEPT} application/ld\+json
RewriteRule ^acrossx/?$ http://xapi.vocab.pub/datasets/acrossx.jsonld [R=303,L]
RewriteRule ^acrossx/(zh-cn)/?$ http://xapi.vocab.pub/datasets/acrossx-zh-cn.jsonld [R=303,L]
RewriteRule ^acrossx/(zh-tw)/?$ http://xapi.vocab.pub/datasets/acrossx-zh-tw.jsonld [R=303,L]




# IEEE ADB Vocabulary
# ---------------------------

# Rewrite rule to serve HTML content if requested
RewriteCond %{HTTP_ACCEPT} !application/rdf\+xml.*(text/html|application/xhtml\+xml)
RewriteCond %{HTTP_ACCEPT} text/html [OR]
RewriteCond %{HTTP_ACCEPT} application/xhtml\+xml [OR]
RewriteCond %{HTTP_USER_AGENT} ^Mozilla/.*
RewriteRule ^adb/?$ http://xapi.vocab.pub/datasets/ieee-adb/ [R=303]
RewriteRule ^adb/([a-z-]+)$ http://xapi.vocab.pub/datasets/ieee-adb/#$1 [R=303,NE]
RewriteRule ^adb/([a-z-]+)/([a-z-]+)$ http://xapi.vocab.pub/datasets/ieee-adb/#$2 [R=303,NE]

# ieee-adb vocabualry rewrite rule to serve JSON-LD if requested
RewriteCond %{HTTP_ACCEPT} application/ld\+json
RewriteRule ^adb/?$ http://xapi.vocab.pub/datasets/adb.jsonld [R=303]



# Return vocabulary JSON-LD for any granular vocab terms
# ---------------------------
RewriteCond %{HTTP_ACCEPT} application/ld\+json
RewriteRule ^([a-z]+)/([a-z]+)/([a-z\-]+)$ http://xapi.vocab.pub/datasets/$1.jsonld [L]

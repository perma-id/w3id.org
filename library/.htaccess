# Turn off MultiViews
Options -MultiViews

# Directive to ensure *.rdf *.owl *.jsonld *.ttl files served as appropriate content type,
# if not present in main apache config
AddType application/rdf+xml .rdf .owl
AddType text/turtle .ttl
AddType application/ld+json .jsonld

# Rewrite engine setup
RewriteEngine On

# Rewrite rule to serve HTML content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} !application/rdf\+xml.*(text/html|application/xhtml\+xml)
RewriteCond %{HTTP_ACCEPT} text/html [OR]
RewriteCond %{HTTP_ACCEPT} application/xhtml\+xml [OR]
RewriteCond %{HTTP_USER_AGENT} ^Mozilla/.*

# HTML Rule
RewriteRule ^ecpo$ http://cklee.github.io/ecpo/ecpo.html [R=303]
RewriteRule ^ssso$ http://gbv.github.io/ssso/ssso.html [R=303]
RewriteRule ^libso$ http://gbv.github.io/libso/libso.html [R=303]
RewriteRule ^dso$ http://gbv.github.io/dso/dso.html [R=303]
RewriteRule ^holding$ http://dini-ag-kim.github.io/holding-ontology/holding.html [R=303]
RewriteRule ^service$ http://dini-ag-kim.github.io/service-ontology/service.html [R=303]
RewriteRule ^daia/$ http://gbv.github.io/daiaspec/daia.html [R=303]
RewriteRule ^paia$ http://gbv.github.io/paia-rdf/paia.html [R=303]
RewriteRule ^mwo$ http://dini-ag-kim.github.io/movingwall/movingwall.html [R=303]

# Rewrite rule to serve RDF/XML content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} application/rdf\+xml

# RDF/XML Rule
RewriteRule ^ecpo$ https://cdn.rawgit.com/cKlee/ecpo/gh-pages/ecpo.owl [R=303]
RewriteRule ^ssso$ https://cdn.rawgit.com/gbv/ssso/gh-pages/ssso.owl [R=303]
RewriteRule ^libso$ https://cdn.rawgit.com/gbv/libso/gh-pages/libso.owl [R=303]
RewriteRule ^dso$ https://cdn.rawgit.com/gbv/dso/gh-pages/dso.owl [R=303]
RewriteRule ^holding$ https://cdn.rawgit.com/dini-ag-kim/holding-ontology/gh-pages/holding.owl [R=303]
RewriteRule ^service$ https://cdn.rawgit.com/dini-ag-kim/service-ontology/gh-pages/service.owl [R=303]
RewriteRule ^daia/ https://cdn.rawgit.com/gbv/daiaspec/gh-pages/daia.owl [R=303]
RewriteRule ^paia$ https://cdn.rawgit.com/gbv/paia-rdf/gh-pages/paia.owl [R=303]
RewriteRule ^mwo$ https://cdn.rawgit.com/dini-ag-kim/movingwall/gh-pages/movingwall.owl [R=303]

# Rewrite rule to serve Turtle content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} text/turtle

# Turtle Rule
RewriteRule ^ecpo$ https://cdn.rawgit.com/cKlee/ecpo/gh-pages/ecpo.ttl [R=303]
RewriteRule ^ssso$ https://cdn.rawgit.com/gbv/ssso/gh-pages/ssso.ttl [R=303]
RewriteRule ^libso$ https://cdn.rawgit.com/gbv/libso/gh-pages/libso.ttl [R=303]
RewriteRule ^dso$ https://cdn.rawgit.com/gbv/dso/gh-pages/dso.ttl [R=303]
RewriteRule ^holding$ https://cdn.rawgit.com/dini-ag-kim/holding-ontology/gh-pages/holding.ttl [R=303]
RewriteRule ^service$ https://cdn.rawgit.com/dini-ag-kim/service-ontology/gh-pages/service.ttl [R=303]
RewriteRule ^daia/ https://cdn.rawgit.com/gbv/daiaspec/gh-pages/daia.ttl [R=303]
RewriteRule ^paia$ https://cdn.rawgit.com/gbv/paia-rdf/gh-pages/paia.ttl [R=303]
RewriteRule ^mwo$ https://cdn.rawgit.com/dini-ag-kim/movingwall/gh-pages/movingwall.ttl [R=303]

# Rewrite rule to serve JSON-LD content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} application/ld\+json

# JSON-LD Rule
RewriteRule ^ecpo$ https://cdn.rawgit.com/cKlee/ecpo/gh-pages/context.jsonld [R=303]


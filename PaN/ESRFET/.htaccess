Header set Access-Control-Allow-Origin *
Options +FollowSymLinks
RewriteEngine On

# Root: redirect to latest
RewriteRule ^$ https://pan-ontologies.github.io/esrf-ontologies/esrfet/latest/ [R=303,L]

# Versioned ontologies, e.g., /v0.1/, /v0.1.0/, /v0.2.0/
RewriteRule ^v([0-9]+(?:\.[0-9]+)+)/?$ https://pan-ontologies.github.io/esrf-ontologies/esrfet/v$1/ [R=303,L,NC]

# Everything else, redirect to latest with path preserved
RewriteRule ^(.+)$ https://pan-ontologies.github.io/esrf-ontologies/esrfet/latest/$1 [R=303,L]
Header set Access-Control-Allow-Origin *
Options +FollowSymLinks

AddType text/turtle .ttl

RewriteEngine on

# HTML documentation
RewriteCond %{HTTP_ACCEPT} text/html
RewriteRule ^$ https://aidava-dev.github.io/sulo/index.html [R=303,L]
RewriteRule ^([A-Z]+(.*))$ https://aidava-dev.github.io/sulo/class-sulo$1.html [R=303,L]
RewriteRule ^([a-z]+(.*))$ https://aidava-dev.github.io/sulo/prop-sulo$1.html [R=303,L]

# Redirects for Turtle files
RewriteCond %{HTTP_ACCEPT} text/turtle 
RewriteRule ^$ https://raw.githubusercontent.com/AIDAVA-DEV/sulo/refs/heads/main/sulo.ttl [R=303,L]
RewriteRule ^sulo\.ttl$ https://raw.githubusercontent.com/AIDAVA-DEV/sulo/refs/heads/main/sulo.ttl [R=303,L]

# Redirects for versioned Turtle files
RewriteCond %{HTTP_ACCEPT} text/turtle
RewriteRule ^sulo-([0-9]+\.[0-9]+\.[0-9]+).ttl$ https://raw.githubusercontent.com/AIDAVA-DEV/sulo/refs/heads/main/versions/sulo-$1.ttl [R=303,L]

# Redirects for Turtle documentation of classes and properties
RewriteCond %{HTTP_ACCEPT} text/turtle
RewriteRule ^([A-Z]+(.*))$ https://raw.githubusercontent.com/AIDAVA-DEV/sulo/refs/heads/main/sulo.ttl [R=303,L]
RewriteRule ^([a-z]+(.*))$ https://raw.githubusercontent.com/AIDAVA-DEV/sulo/refs/heads/main/sulo.ttl [R=303,L]


# Default response
# ---------------------------
# Rewrite rule to serve the TTL content from the vocabulary URI by default
RewriteCond %{HTTP_ACCEPT} .+
RewriteRule ^$ https://raw.githubusercontent.com/AIDAVA-DEV/sulo/refs/heads/main/sulo.ttl [R=303,L]

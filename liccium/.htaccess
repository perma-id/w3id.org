# Turn off MultiViews
Options -MultiViews

# MIME type declarations
AddType application/json .json
AddType text/turtle .ttl

# Rewrite engine setup
RewriteEngine On
RewriteBase /liccium/

# ------------------------------
# Schema files
# ------------------------------
RewriteRule ^schema/(.+)\.json$ https://raw.githubusercontent.com/liccium/w3id.docs/main/schema/$1.json [R=303,L]

# ------------------------------
# Context files
# ------------------------------
RewriteRule ^context/(.+)\.json$ https://raw.githubusercontent.com/liccium/w3id.docs/main/context/$1.json [R=303,L]

# ------------------------------
# Ontology files
# ------------------------------
# Default: ont/ or ont â†’ 0.1.0.ttl
RewriteRule ^ont/?$ https://raw.githubusercontent.com/liccium/w3id.docs/main/ont/0.1.0.ttl [R=303,L]
# Specific file: ont/<version>.ttl
RewriteRule ^ont/(.+)\.ttl$ https://raw.githubusercontent.com/liccium/w3id.docs/main/ont/$1.ttl [R=303,L]

# ------------------------------
# Default response (redirect to GitHub repo)
# ------------------------------
RewriteRule ^$ https://github.com/liccium/w3id.docs [R=303,L]

RewriteEngine On

# Rule 1: Redirect base to index
RewriteRule ^$ https://fom.github.io/fom-public-resources/index.html [R=301,L]

# Rule 2: Redirect /resource to a specific page, with or without a fragment
RewriteRule ^(public/)?ontology(|#(.*))$ https://fom.github.io/fom-public-resources/fom.html$2 [R=301,L]

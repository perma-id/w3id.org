RewriteEngine On

# =========================
# 1. context.jsonld（JSON-LD）
# =========================
RewriteRule ^context\.jsonld$ https://digital-identity-description-language.github.io/didl-core/context.jsonld [R=303,L]

# =========================
# 2. html or ttl 
# =========================

# HTML
RewriteCond %{HTTP_ACCEPT} text/html
RewriteRule ^$ https://digital-identity-description-language.github.io/didl-core/index.html [R=303,L]

# Turtle
RewriteCond %{HTTP_ACCEPT} text/turtle
RewriteRule ^$ https://digital-identity-description-language.github.io/didl-core/ontology.ttl [R=303,L]

# by default also HTML
RewriteRule ^$ https://digital-identity-description-language.github.io/didl-core/index.html [R=303,L]

Options +FollowSymLinks
RewriteEngine on
Options -MultiViews

# The rewrite rules below work on the following conditions:
# 1. each ontology directory contains a symbolic link 'latest' to the directory of the latest published version of the ontology, and
# 2. each ontology version directory contains symbolic links to different serializations ('ttl', 'json', 'xml', 'nt')
# Minor translations
RewriteRule ^(.+)/$                                         $1                                                          [R=302,NE,L]
RewriteRule ^(.+).owl$                                      $1.xml                                                      [R=302,NE,L]
RewriteRule ^(.+).jsonld$                                   $1.json                                                     [R=302,NE,L]
# Accept headers
RewriteCond %{HTTP_ACCEPT} ^.*text/turtle.*
RewriteCond %{REQUEST_URI} !^.*(ttl|json|xml|nt|html)
RewriteRule ^([0-9].[0-9]\/)?([A-Z])(.*)([\/\.]?)$          $1$2$3/ttl                                                  [R=302,NE,L]
RewriteCond %{HTTP_ACCEPT} ^.*application/(.*)json.*
RewriteCond %{REQUEST_URI} !^.*(ttl|json|xml|nt|html)
RewriteRule ^([0-9].[0-9]\/)?([A-Z])(.*)([\/\.]?)$          $1$2$3/json                                                 [R=302,NE,L]
RewriteCond %{HTTP_ACCEPT} ^.*application/n-triples.*
RewriteCond %{REQUEST_URI} !^.*(ttl|json|xml|nt|html)
RewriteRule ^([0-9].[0-9]\/)?([A-Z])(.*)([\/\.]?)$          $1$2$3/nt                                                   [R=302,NE,L]
RewriteCond %{HTTP_ACCEPT} ^.*application/(rdf|owl)\+xml.*
RewriteCond %{REQUEST_URI} !^.*(ttl|json|xml|nt|html)
RewriteRule ^([0-9].[0-9]\/)?([A-Z])(.*)([\/\.]?)$          $1$2$3/xml                                                  [R=302,NE,L]
# URI patterns

# Documentation redirects (GitHub Pages)
# Root index (latest docs of our ontology overview page)
RewriteRule ^index.html$                                https://circularfactory.github.io/latest/index.html     [R=302,NE,L]

# Versioned root index
RewriteRule ^([0-9]+\.[0-9]+(\.[0-9]+)?)/index.html$  https://circularfactory.github.io/v/$1/index.html       [R=302,NE,L]

# Generic ontology (versioned)
RewriteRule ^([A-Za-z0-9]+)(.*)/([0-9]+\.[0-9]+(\.[0-9]+)?)$  https://circularfactory.github.io/$1/v/$3/docs/index.html [R=302,NE,L]


# Root version redirect to docs for versions like 1.3 or 1.2.5
RewriteRule ^([0-9]+\.[0-9]+(\.[0-9]+)?)[\/]?$	       https://circularfactory.github.io/v/$1/index.html       [R=302,NE,L]

# Generic ontology (latest)
RewriteRule ^([A-Za-z0-9]+)(.*)$                       https://circularfactory.github.io/$1/latest$2           [R=302,NE,L]

# Fallback root
RewriteRule ^$                                         https://circularfactory.github.io/latest/index.html     [R=302,NE,L]
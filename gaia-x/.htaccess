Header set Access-Control-Allow-Origin *

# Directive to ensure *.rdf files served as appropriate content type,
# if not present in main apache config
AddType application/rdf+xml .rdf
AddType application/rdf+xml .owl
AddType text/turtle .ttl
AddType text/n3 .ttl
AddType application/n-triples .nt
AddType application/ld+json .json

Options +FollowSymLinks

RewriteEngine on

# BASE: Visit homepage
RewriteRule ^$ https://data-infrastructure.eu/ [R=303]

# Direct ontology access: Access respective ontology
RewriteRule ^(core|asset|node|participant|service|contract).(ttl|xml|json|nt)$      https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/$1/ontology.$2 [L,R=303]
RewriteRule ^(core|asset|node|participant|service|contract).rdf$      https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/$1.xml [L,R=303]
RewriteRule ^(core|asset|node|participant|service|contract).jsonld$   https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/$1.json [L,R=303]

# HTML: Visit documentation
RewriteCond %{HTTP_ACCEPT} !application/rdf\+xml.*(text/html|application/xhtml\+xml|text/\*|\*/\*)
RewriteCond %{HTTP_ACCEPT} text/html [OR]
RewriteCond %{HTTP_ACCEPT} application/xhtml\+xml [OR]
RewriteCond %{HTTP_ACCEPT} text/\* [OR]
RewriteCond %{HTTP_ACCEPT} \*/\*
RewriteRule ^(core|asset|node|participant|service|contract)           https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/$1/$1.html [L,NE,R=303]

RewriteCond %{HTTP_ACCEPT} !application/rdf\+xml.*(text/html|application/xhtml\+xml|text/\*|\*/\*)
RewriteCond %{HTTP_ACCEPT} text/html [OR]
RewriteCond %{HTTP_ACCEPT} application/xhtml\+xml [OR]
RewriteCond %{HTTP_ACCEPT} text/\* [OR]
RewriteCond %{HTTP_ACCEPT} \*/\*
RewriteRule ^(core|asset|node|participant|service|contract)/(.*)$     https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/$1/$1.html#$1 [L,NE,R=303]

# TURTLE: Access TTL ontology
RewriteCond %{HTTP_ACCEPT} ^.*text/turtle.*
RewriteRule ^core           https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/Ontology/ontology.ttl [L,R=303]

RewriteCond %{HTTP_ACCEPT} ^.*text/turtle.*
RewriteRule ^(core|asset|node|participant|service|contract)/(.*)      https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/$1/ontology.ttl [L,R=303]

# RDF/XML: Access XML ontology
RewriteCond %{HTTP_ACCEPT} ^.*application/rdf\+xml.*  [OR]
RewriteCond %{HTTP_ACCEPT} ^.*application/xml.* [OR]
RewriteCond %{HTTP_ACCEPT} ^.*text/xml.*
RewriteRule ^(core|asset|node|participant|service|contract)           https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/$1/ontology.xml [L,R=303]

RewriteCond %{HTTP_ACCEPT} ^.*application/rdf\+xml.*  [OR]
RewriteCond %{HTTP_ACCEPT} ^.*application/xml.* [OR]
RewriteCond %{HTTP_ACCEPT} ^.*text/xml.*
RewriteRule ^(core|asset|node|participant|service|contract)/(.*)      https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/$1/ontology.xml [L,R=303]

# JSON-LD: Access JSON(-LD) ontology
RewriteCond %{HTTP_ACCEPT} ^.*application/ld\+json.*
RewriteRule ^(core|asset|node|participant|service|contract)           https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/$1/ontology.json [L,R=303]

RewriteCond %{HTTP_ACCEPT} ^.*application/ld\+json.*
RewriteRule ^(core|asset|node|participant|service|contract)/(.*)      https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/$1/ontology.json [L,R=303]

# JSON: Access JSON ontology
RewriteCond %{HTTP_ACCEPT} ^.*application/json.*
RewriteRule ^(core|asset|node|participant|service|contract)           https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/$1/ontology.json [L,R=303]

RewriteCond %{HTTP_ACCEPT} ^.*application/json.*
RewriteRule ^(core|asset|node|participant|service|contract)/(.*)      https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/$1/ontology.json [L,R=303]

# N-TRIPLES: Access NT ontology
RewriteCond %{HTTP_ACCEPT} ^.*application/n-triples.*
RewriteRule ^(core|asset|node|participant|service|contract)           https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/$1/ontology.nt [L,R=303]

RewriteCond %{HTTP_ACCEPT} ^.*application/n-triples.*
RewriteRule ^(core|asset|node|participant|service|contract)/(.*)      https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/$1/ontology.nt [L,R=303]

# No matching content type: Visit documentation
RewriteRule ^(core|asset|node|participant|service|contract)/(.*)      https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/$1/index.html#$1 [L,NE,R=303]

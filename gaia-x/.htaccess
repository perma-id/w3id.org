Header set Access-Control-Allow-Origin *

# Directive to ensure *.rdf files served as appropriate content type,
# if not present in main apache config
AddType application/rdf+xml .rdf
AddType application/rdf+xml .owl
AddType text/turtle .ttl
AddType text/n3 .ttl
AddType application/n-triples .nt
AddType application/ld+json .json

Options +FollowSymLinks

# HTML
RewriteRule ^$ https://data-infrastructure.eu/ [R=303]
RewriteCond %{HTTP_ACCEPT} !application/rdf\+xml.*(text/html|application/xhtml\+xml|text/\*|\*/\*)
RewriteCond %{HTTP_ACCEPT} text/html [OR]
RewriteCond %{HTTP_ACCEPT} application/xhtml\+xml [OR]
RewriteCond %{HTTP_ACCEPT} text/\* [OR]
RewriteCond %{HTTP_ACCEPT} \*/\*
RewriteRule ^(core)/?$ https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/index.html#$2 [NE,R=303]

# TURTLE
RewriteCond %{HTTP_ACCEPT} ^.*text/turtle.*
RewriteRule ^(core)(/|#)* https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/ontology.ttl [NE,R=303]
RewriteRule ^(core).ttl https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/ontology.ttl [R=303]

# RDF/XML
RewriteCond %{HTTP_ACCEPT} ^.*application/rdf\+xml.*  [OR]
RewriteCond %{HTTP_ACCEPT} ^.*application/xml.* [OR]
RewriteCond %{HTTP_ACCEPT} ^.*text/xml.*
RewriteRule ^(core)(/|#)*(.*) https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/ontology.xml [NE,R=303]
RewriteRule ^(core).rdf https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/ontology.xml [R=303]
RewriteRule ^(core).xml https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/ontology.xml [R=303]

# JSON-LD
RewriteCond %{HTTP_ACCEPT} ^.*application/ld\+json.*
RewriteRule ^(core)(/|#)*(.*) https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/ontology.json [NE,R=303]
RewriteRule ^(core).jsonld https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/ontology.json [R=303]

# JSON
RewriteCond %{HTTP_ACCEPT} ^.*application/json.*
RewriteRule ^(core)(/|#)*(.*) https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/ontology.json [NE,R=303]
RewriteRule ^(core).json https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/ontology.json [R=303]

# N-TRIPLES
RewriteCond %{HTTP_ACCEPT} ^.*application/n-triples.*
RewriteRule ^(core)(/|#)* https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/ontology.nt [NE,R=303]
RewriteRule ^(core).nt https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/ontology.nt [R=303]

#
RewriteRule ^(core)/(.+) https://gaia-x.gitlab.io/gaia-x-community/gaia-x-self-descriptions/index.html#/$2 [NE,R=303]

RewriteEngine on

# RO Crate homepage
RewriteRule ^$ https://www.researchobject.org/ro-crate/ [L]

# RO Crate context
RewriteRule ^(0.*)/context$ https://www.researchobject.org/ro-crate/$1/context.json [L]
RewriteRule ^(.*)/context$ https://www.researchobject.org/ro-crate/$1/context.jsonld [L]
# RO Crate specification (e.g. https://w3id.org/ro/crate/0.2 )
RewriteRule ^(\d+.\d+)/?$ https://www.researchobject.org/ro-crate/$1/ [L]

# RO-Crates per specification release
RewriteRule ^(.*)/crate$ https://www.researchobject.org/ro-crate/$1/ro-crate-metadata.jsonld [L]


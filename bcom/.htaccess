Options +FollowSymLinks
RewriteEngine on

# Turn off MultiViews
Options -MultiViews

AddType text/turtle .ttl
AddType application/rdf+xml .rdf
AddType application/ld+json .jsonld

# Rewrite rule to serve HTML content from the vocabulary URI if requested
RewriteCond %{HTTP_ACCEPT} text/html [OR]
RewriteCond %{HTTP_ACCEPT} application/xhtml\+xml [OR]
RewriteCond %{HTTP_USER_AGENT} ^Mozilla/.*
RewriteRule ^$ https://icdd.vm.rub.de/ontology/bcom/ [R=302,NE,L]

# In case of accept header <text/turtle>
RewriteCond %{HTTP_ACCEPT} ^.*text/turtle.* 
RewriteRule ^$ https://icdd.vm.rub.de/ontology/bcom/BuildingConcreteMonitoring.ttl [R=303,NE,L]

# In case of accept header <application/rdf+xml>
RewriteCond %{HTTP_ACCEPT} application/rdf\+xml
RewriteRule ^$ https://icdd.vm.rub.de/ontology/bcom/BuildingConcreteMonitoring.rdf [R=302,NE,L]

# In case of accept header <application/ld+json>
RewriteCond %{HTTP_ACCEPT} application/ld+json
RewriteRule ^$ https://icdd.vm.rub.de/ontology/bcom/BuildingConcreteMonitoring.jsonld [R=302,NE,L]

# If suffix ttl, redirect to turtle version
RewriteRule ^bcom.ttl$ https://icdd.vm.rub.de/ontology/bcom/BuildingConcreteMonitoring.ttl [R=302,NE,L]

# If suffix html, redirect to html version
RewriteRule ^bcom.html$ https://icdd.vm.rub.de/ontology/bcom/ [R=302,NE,L]

# If suffix rdf, redirect to rdf version
RewriteRule ^bcom.rdf$ https://icdd.vm.rub.de/ontology/bcom/BuildingConcreteMonitoring.rdf [R=302,NE,L]

# If suffix jsonld, redirect to jsonld version
RewriteRule ^bcom.jsonld$ https://icdd.vm.rub.de/ontology/bcom/BuildingConcreteMonitoring.jsonld [R=302,NE,L]

# If suffix nt, redirect to nt version
RewriteRule ^bcom.nt$ https://icdd.vm.rub.de/ontology/bcom/BuildingConcreteMonitoring.nt [R=302,NE,L]

# Default response: html
RewriteRule ^$ https://icdd.vm.rub.de/ontology/bcom/ [R=303,NE,L]

RewriteEngine on
RewriteRule ^$ http://isa-tools.org

RewriteCond %{HTTP_ACCEPT} !application/rdf\+xml.*(text/html|application/xhtml\+xml)
RewriteCond %{HTTP_ACCEPT} text/html [OR]
RewriteCond %{HTTP_ACCEPT} application/xhtml\+xml [OR]
RewriteCond %{HTTP_USER_AGENT} ^Mozilla/.*
RewriteRule (.+) http://newt.oerc.ox.ac.uk:8890/describe/?url=http://w3id.org/scc/$1 [R=303]

RewriteCond %{HTTP_ACCEPT} application/rdf\+xml
RewriteRule (.+) http://newt.oerc.ox.ac.uk:8890/sparql?query=DESCRIBE+<http://w3id.org/scc/$1>&format=application/rdf+xml [R=303]


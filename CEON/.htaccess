Options +FollowSymLinks

# Rewrite engine setup
RewriteEngine on

# Homepage/repository
RewriteRule ^/?$ https://liusemweb.github.io/CEON/ [R=308,L]

# Redirect catalogue request
# RewriteRule ^catalogue/?$ https://liusemweb.github.io/CEON/catalogue [R=308,L]
RewriteRule ^catalogue/?$ https://github.com/LiUSemWeb/Circular-Economy-Ontology-Catalogue [R=308,L]

# Redirect alignments request
RewriteRule ^alignments/?$ https://github.com/LiUSemWeb/Circular-Economy-Ontology-Catalogue/tree/main/alignments [R=308,L]

# Redirect request to versioned/latest RDF/XML
RewriteCond %{HTTP_ACCEPT} application/rdf\+xml
RewriteRule ^ontology/([\w\-_0-9]+)/([0-9]\.[0-9](?:\.[0-9])?|latest)/?$ https://liusemweb.github.io/CEON/ontology/$1/$2/$1.rdf [R=303,NE,L]

# Redirect request to versioned/latest Turtle
RewriteCond %{HTTP_ACCEPT} text/turtle
RewriteRule ^ontology/([\w\-_0-9]+)/([0-9]\.[0-9](?:\.[0-9])?|latest)/?$ https://liusemweb.github.io/CEON/ontology/$1/$2/$1.ttl [R=303,NE,L]

# Redirect request to versioned/latest JSON-LD
RewriteCond %{HTTP_ACCEPT} application/ld\+json
RewriteRule ^ontology/([\w\-_0-9]+)/([0-9]\.[0-9](?:\.[0-9])?|latest)/?$ https://liusemweb.github.io/CEON/ontology/$1/$2/$1.jsonld [R=303,NE,L]

# Redirect request to RDF/XML (base URL)
RewriteCond %{HTTP_ACCEPT} application/rdf\+xml
RewriteRule ^ontology/([\w\-_0-9]+)/?$ https://liusemweb.github.io/CEON/ontology/$1/latest/$1.rdf [R=303,NE,L]

# Redirect request to Turtle (base URL)
RewriteCond %{HTTP_ACCEPT} text/turtle
RewriteRule ^ontology/([\w\-_0-9]+)/?$ https://liusemweb.github.io/CEON/ontology/$1/latest/$1.ttl [R=303,NE,L]

# Redirect request to JSON-LD (base URL)
RewriteCond %{HTTP_ACCEPT} application/ld\+json
RewriteRule ^ontology/([\w\-_0-9]+)/?$ https://liusemweb.github.io/CEON/ontology/$1/latest/$1.jsonld [R=303,NE,L]

# Redirect to specific file
RewriteRule ^ontology/([\w\-_0-9]+)/([0-9]\.[0-9](?:\.[0-9])?|latest)/(\w+\.(\w+))$ https://liusemweb.github.io/CEON/ontology/$1/$2/$3 [R=303,NE,L]

# Redirect versioned request for any text-oriented MIME type to the documentation
RewriteRule ^ontology/([\w\-_0-9]+)/([0-9]\.[0-9](?:\.[0-9])?|latest)/?$ https://liusemweb.github.io/CEON/ontology/$1/$2/index.html [R=303,NE,L]

# Redirect to resource documentation for any text-oriented MIME type
RewriteRule ^ontology/([\w\-_0-9]+)/([\w\-_0-9]+)$ https://liusemweb.github.io/CEON/ontology/$1/latest/index.html#$2 [R=303,NE,L]

# Redirect base URL (no version or latest) request for any text-oriented MIME type to the documentation
RewriteRule ^ontology/([\w\-_0-9]+)/?$ https://liusemweb.github.io/CEON/ontology/$1/latest/index.html [R=303,NE,L]

# Default redirect for unmatched patterns to GitHub project
RewriteRule ^.* https://github.com/LiUSemWeb/CEON [R=303,NE,L]

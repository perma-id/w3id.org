Options +FollowSymLinks
# Turn off MultiViews
Options -MultiViews

# Rewrite engine setup
RewriteEngine On

# redirect to overview
RewriteRule ^/?$ https://jimjyang.github.io/showroom/ [R=302,L]

#Rewrite rules for w3id.org/demo-resources/demo-classifications
# Norwegian Bokmål
RewriteCond %{HTTP:Accept-Language} nb [NC]
RewriteRule ^demo-classifications# https://jimjyang.github.io/showroom/xkos-ap-no/files/demo-classifications-nb#  [R=302,L]
# English
RewriteCond %{HTTP:Accept-Language} en [NC]
RewriteRule ^demo-classifications# https://jimjyang.github.io/showroom/xkos-ap-no/files/demo-classifications-en#  [R=302,L]
# English as default
RewriteRule ^demo-classifications# https://jimjyang.github.io/showroom/xkos-ap-no/files/demo-classifications-en#  [R=303,L]
RewriteCond %{HTTP:Accept} text/turtle [NC]
RewriteRule ^demo-classifications# https://jimjyang.github.io/showroom/xkos-ap-no/files/demo-classifications.ttl# [R=302,L]


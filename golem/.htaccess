RewriteEngine On

# RDF/XML
RewriteCond %{HTTP_ACCEPT} application/rdf\+xml [NC]
RewriteRule ^golem/ontology$ https://ontology.golemlab.eu/golem.ttl [R=303,L]

# Turtle
RewriteCond %{HTTP_ACCEPT} text/turtle [NC]
RewriteRule ^golem/ontology$ https://ontology.golemlab.eu/golem.ttl [R=303,L]

# HTML
RewriteCond %{HTTP_ACCEPT} text/html [NC]
RewriteRule ^golem/ontology$ https://ontology.golemlab.eu/golem.html [R=303,L]

# Default fallback
RewriteRule ^golem/ontology$ https://ontology.golemlab.eu/golem.html [R=303,L]

# Versioned URI (for FOOPS! VER2)
Redirect 302 /golem/ontology/v1.0 https://ontology.golemlab.eu/golem.ttl


RewriteEngine On

# Redirect to website for the root URI
RewriteRule	  ^$ https://sfb1475.ruhr-uni-bochum.de/ [R=302,L]

# Redirect to vocabulary overview
RewriteRule   ^CT/?$ https://eris.vm.rub.de/Skosmos/ct/ [R=303,L,QSA]
# Redirect individual concepts
RewriteRule   ^CT/concepts/(.+)$ https://eris.vm.rub.de/Skosmos/ct/page/$1 [R=303,L,QSA]
# Redirect alternative concepts
RewriteRule ^Semdom/?$ https://eris.vm.rub.de/Skosmos/semdom/ [R=303,L,QSA]
RewriteRule ^Semdom/concepts/(.+)$ https://eris.vm.rub.de/Skosmos/semdom/page/$1 [R=303,L,QSA]

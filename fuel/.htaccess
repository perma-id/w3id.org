Options +FollowSymLinks
RewriteEngine On

# Rewrite rules for the FUsion Energy Lexicon (FUEL), including content negotiation

# Default to Turtle if no Accept header is provided
RewriteCond %{HTTP_ACCEPT} !(rdf\+xml|json-ld|n-triples|turtle|trig|n3|html) [NC]
RewriteRule ^$ https://raw.githubusercontent.com/ukaea/fuel/main/fuel.ttl [R=303,L]

# RDF/XML
RewriteCond %{HTTP_ACCEPT} application/rdf\+xml [NC,OR]
RewriteCond %{HTTP_ACCEPT} application/xml [NC,OR]
RewriteCond %{HTTP_ACCEPT} text/xml [NC]
RewriteRule ^$ https://raw.githubusercontent.com/ukaea/fuel/main/fuel.owl [R=303,L]

# JSON-LD
RewriteCond %{HTTP_ACCEPT} application/ld\+json [NC]
RewriteRule ^$ https://raw.githubusercontent.com/ukaea/fuel/main/fuel.jsonld [R=303,L]

# N-Triples
RewriteCond %{HTTP_ACCEPT} application/n-triples [NC]
RewriteRule ^$ https://raw.githubusercontent.com/ukaea/fuel/main/fuel.nt [R=303,L]

# Turtle
RewriteCond %{HTTP_ACCEPT} text/turtle [NC]
RewriteRule ^$ https://raw.githubusercontent.com/ukaea/fuel/main/fuel.ttl [R=303,L]

# HTML (documentation on GitHub Pages)
RewriteCond %{HTTP_ACCEPT} text/html [NC]
RewriteRule ^$ https://ukaea.github.io/fuel/ [R=303,L]

# Fallback: default to HTML
RewriteRule ^$ https://ukaea.github.io/fuel/ [R=303,L]
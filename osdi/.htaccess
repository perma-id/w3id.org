RewriteEngine On
RewriteBase /osdi/

# Redirige a la documentación HTML (para humanos)
RewriteCond %{HTTP_ACCEPT} text/html
RewriteRule ^$ https://ontologies-ull.github.io/OSDi/index-en.html [R=302,L]

# Redirige a RDF/XML si lo piden
RewriteCond %{HTTP_ACCEPT} application/rdf\+xml
RewriteRule ^$ https://ontologies-ull.github.io/OSDi/ontology.owl [R=302,L]

# Redirige a Turtle si lo piden
RewriteCond %{HTTP_ACCEPT} text/turtle
RewriteRule ^$ https://ontologies-ull.github.io/OSDi/ontology.ttl [R=302,L]

# Fallback: siempre manda a la documentación
RewriteRule ^$ https://ontologies-ull.github.io/OSDi/index-en.html [R=302,L]

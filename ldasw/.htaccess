Options +FollowSymLinks
# Turn off MultiViews
Options -MultiViews

# Directive to ensure *.rdf files served as appropriate content type,
# if not present in main apache config
AddType application/rdf+xml .rdf
AddType application/rdf+xml .owl
AddType text/turtle .ttl

RewriteEngine on

RewriteCond %{HTTP_ACCEPT} !application/rdf\+xml.*(text/html|application/xhtml\+xml|text/\*|\*/\*)
RewriteCond %{HTTP_ACCEPT} text/html [OR]
RewriteCond %{HTTP_ACCEPT} application/xhtml\+xml [OR]
RewriteCond %{HTTP_ACCEPT} text/\* [OR]
RewriteCond %{HTTP_ACCEPT} \*/\* [OR]
RewriteCond %{HTTP_ACCEPT} ^.*application/rdf\+xml.* 
RewriteRule ^university$ https://raw.githubusercontent.com/PaavoNykanen/Ontologies/main/LinkedData/UniversityOntology/university.owl [R=303,NE,L]
RewriteCond %{HTTP_ACCEPT} ^.*text/turtle.* 
RewriteRule ^university$ https://raw.githubusercontent.com/PaavoNykanen/Ontologies/main/LinkedData/UniversityOntology/university.ttl [R=303,NE,L]
#default response: owl
RewriteRule ^university$ https://raw.githubusercontent.com/PaavoNykanen/Ontologies/main/LinkedData/UniversityOntology/university.owl [R=303,NE,L]

RewriteCond %{HTTP_ACCEPT} ^.*application/rdf\+xml.* 
RewriteRule ^sport$ https://raw.githubusercontent.com/PaavoNykanen/Ontologies/main/LinkedData/SportOntology/sport.owl [R=303,NE,L]
#Default response for sport:
RewriteRule ^sport$ https://raw.githubusercontent.com/PaavoNykanen/Ontologies/main/LinkedData/SportOntology/sport.owl [R=303,NE,L]

RewriteCond %{HTTP_ACCEPT} ^.*application/rdf\+xml.* 
RewriteRule ^project1$ https://raw.githubusercontent.com/PaavoNykanen/Ontologies/main/LinkedData/Project/project1.owl [R=303,NE,L]
#Default response for project:
RewriteRule ^project1$ https://raw.githubusercontent.com/PaavoNykanen/Ontologies/main/LinkedData/Project/project1.owl [R=303,NE,L]

RewriteCond %{HTTP_ACCEPT} ^.*application/rdf\+xml.* 
RewriteRule ^UTLocations_linked$ https://raw.githubusercontent.com/PaavoNykanen/Ontologies/main/LinkedData/Project/UTLocations_linked.owl [R=303,NE,L]
#Default response for project final dataset:
RewriteRule ^UTLocations_linked$ https://raw.githubusercontent.com/PaavoNykanen/Ontologies/main/LinkedData/Project/UTLocations_linked.owl [R=303,NE,L]

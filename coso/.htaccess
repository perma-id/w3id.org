RewriteEngine on

# Rewrite rule to serve directed HTML content from class/prop URIs
RewriteCond %{HTTP_ACCEPT} !application/rdf\+xml.*(text/html|application/xhtml\+xml)
RewriteCond %{HTTP_ACCEPT} text/html [OR]
RewriteCond %{HTTP_ACCEPT} application/xhtml\+xml
RewriteRule ^v1/contaminoso#(.+) https://github.com/SAWGraph/contaminoso/docs/contaminoso.html#$1 [B]
# backreference [B] flag ensures non alpha-numeric characters are url encoded 

# Rewrite for specific ontology uris
RewriteRule ^v1/contaminoso-full# https://raw.githubusercontent.com/SAWGraph/contaminoso/refs/heads/main/v1/contaminoso_full.ttl [NC]
RewriteRule ^v1/contaminoso-stad-qudt# https://raw.githubusercontent.com/SAWGraph/contaminoso/refs/heads/main/v1/contaminoso_stad_qudt.ttl [NC]
RewriteRule ^v1/contaminoso# https://raw.githubusercontent.com/SAWGraph/contaminoso/refs/heads/main/v1/contaminoso_core.ttl



# Default response
# -----------------------------
# Rewrite rule to serve ttl content by default
RewriteRule ^$ https://raw.githubusercontent.com/SAWGraph/contaminoso/refs/heads/main/v1/contaminoso_core.ttl [NC]



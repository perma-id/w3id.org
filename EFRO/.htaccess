# Turn off MultiViews
Options -MultiViews

# Directive to ensure .htaccess files work
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /EFRO/
    
    # Rewrite rules for /EFRO/EFRO path
    # Serve RDF/XML content when requested
    RewriteCond %{HTTP_ACCEPT} application/rdf\+xml
    RewriteRule ^EFRO$ https://rgu-computing.github.io/EFRO/EFRO/EFRO.rdf [R=303,L]
    
    # Default response for /EFRO/EFRO
    RewriteRule ^EFRO$ https://rgu-computing.github.io/EFRO/EFRO/docs/index-en.html [R=303,L]
</IfModule>
